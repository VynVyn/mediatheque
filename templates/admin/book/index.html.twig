{% extends 'base.html.twig' %}

{% block title %}Book index{% endblock %}

{% block body %}
<main class="wrap mt-50-mb-50">
    <h1>Book index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Cote</th>
                <th>Delicate</th>
                <th>Title</th>
                <th>NumberPage</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
                <td>{{ book.id }}</td>
                <td>{{ book.cote }}</td>
                <td>{{ book.delicate ? 'Yes' : 'No' }}</td>
                <td>{{ book.title }}</td>
                <td>{{ book.numberPage }}</td>
                <td>
                    <a href="{{ path('book_show', {'id': book.id}) }}">show</a>
                    <a href="{{ path('book_edit', {'id': book.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('book_new') }}">Create new</a>
</main>
{% endblock %}
