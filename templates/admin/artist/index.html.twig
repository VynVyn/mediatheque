{% extends 'base.html.twig' %}

{% block title %}Artist index{% endblock %}

{% block body %}
<main class="wrap mt-50-mb-50">
    <h1>Artist index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>FirstName</th>
                <th>LasteName</th>
                <th>Birthday</th>
                <th>DateOfDeath</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for artist in artists %}
            <tr>
                <td>{{ artist.id }}</td>
                <td>{{ artist.firstName }}</td>
                <td>{{ artist.lasteName }}</td>
                <td>{{ artist.birthday ? artist.birthday|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ artist.dateOfDeath ? artist.dateOfDeath|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('artist_show', {'id': artist.id}) }}">show</a>
                    <a href="{{ path('artist_edit', {'id': artist.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('artist_new') }}">Create new</a>


</main>
{% endblock %}
